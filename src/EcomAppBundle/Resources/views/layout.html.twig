<!DOCTYPE html>

<html>

<head>

    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>{% block title %}HomeShop{% endblock %}</title>

    {% block stylesheets %}
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,700,900,700italic,500italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/perfect-scrollbar.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/flexslider.css') }}" type="text/css" media="screen" />
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/fontello.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/animation.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/owl.carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/owl.theme.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/chosen.css') }}">

    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/ie.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ecomapp/css/fontello-ie7.css') }}">
    {% endblock %}

    {% block javascripts_head %}
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        {#<script src="https://code.jquery.com/jquery-1.12.4.js"></script>#}
        {#<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>#}
    {% endblock %}

</head>

<body>

<!-- Container -->
<div class="container">

    <!-- Header -->
    <header class="row">

        <div class="col-lg-12 col-md-12 col-sm-12">

            <!-- Top Header -->
            {% include 'EcomAppBundle:Default:top_header.html.twig' %}
            <!-- /Top Header -->

            <!-- Main Header -->
            {% include 'EcomAppBundle:Default:main_header.html.twig' %}
            <!-- /Main Header -->

            <!-- Main Navigation -->
            {% include 'EcomAppBundle:Default:main_nav.html.twig' %}
            <!-- /Main Navigation -->

        </div>

    </header>
    <!-- /Header -->


    <!-- Content -->
    <div class="row content">
    {% block body %}

        <!-- Slider -->
        <!-- /Slider -->
        <!-- Banner -->
        <!-- /Banner -->
        <!-- Main Content -->
        <!-- /Main Content -->
        <!-- Sidebar -->
        {% block sidebar %}
            {% include 'EcomAppBundle:Default:sidebar.html.twig' %}
        {% endblock sidebar %}
        <!-- /Sidebar -->
        {% endblock body %}
    </div>
    <!-- /Content -->


    <!-- Footer -->
    <footer id="footer" class="row">

        <!-- Main Footer -->
        {% include 'EcomAppBundle:Default:main_footer.html.twig' %}
        <!-- /Main Footer -->

        <!-- Lower Footer -->
        {% include 'EcomAppBundle:Default:lower_footer.html.twig' %}
        <!-- /Lower Footer -->

    </footer>
    <!-- Footer -->


    <div id="back-to-top">
        <i class="icon-up-dir"></i>
    </div>

</div>
<!-- Container -->



{% block javascripts %}

<script src="{{ asset('bundles/ecomapp/js/modernizr.min.js') }}"></script>
